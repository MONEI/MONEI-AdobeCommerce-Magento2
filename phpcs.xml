<?xml version="1.0"?>
<ruleset name="MONEI Adobe Commerce (Magento 2) Module Coding Standard">
    <description>MONEI Adobe Commerce (Magento 2) Module Coding Standard</description>

    <!-- Specify the standard to use -->
    <rule ref="Magento2"/>

    <!-- Set extensions to check -->
    <arg name="extensions" value="php,phtml"/>

    <!-- Show progress and sniff codes in output -->
    <arg value="ps"/>

    <!-- Show colors in output -->
    <arg name="colors"/>

    <!-- Directories to exclude -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- Set max line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
</ruleset>
