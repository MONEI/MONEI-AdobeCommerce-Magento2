{
  "name": "monei-magento2",
  "version": "1.4.2",
  "main": "index.js",
  "repository": "git@github.com:MONEI/MONEI-AdobeCommerce-Magento2.git",
  "author": "MONEI <support@monei.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "release": "release-it",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "release-it": {
    "git": {
      "tagName": "${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "composer.json",
          "etc/module.xml"
        ]
      }
    },
    "hooks": {
      "after:bump": "git add -A"
    }
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.21.0",
    "@prettier/plugin-xml": "^3.1.1",
    "@release-it/bumper": "^3.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "release-it": "^14.12.4"
  },
  "packageManager": "yarn@4.7.0",
  "lint-staged": {
    "*.{js,json,css,md,yml,yaml,html,xml}": [
      "prettier --write"
    ]
  }
}
