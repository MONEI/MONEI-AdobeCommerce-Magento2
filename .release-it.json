{
  "git": {
    "tagName": "${version}",
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "out": ["composer.json", {"file": "etc/module.xml", "path": "config > module.setup_version"}]
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "git add -A"
  }
}
