    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "../composer.json"
        ]
      }
    }
  },
  "devDependencies": {
    "@release-it/bumper": "^3.0.1",
    "release-it": "^15.11.0"
  }
}
